<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#454A4E"/>

    <!-- Rounded corners -->
    <corners android:radius="8dp"/>

    <!-- Optional border (remove if not needed) -->
    <stroke
        android:width="0dp"
        android:color="#454A4E"/>

    <!-- Padding so icon looks centered -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"/>
</shape>
