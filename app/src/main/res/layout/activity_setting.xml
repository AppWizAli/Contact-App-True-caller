<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6F8">

    <!-- TOP BAR -->
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingHorizontal="16dp"
        android:background="#F4F6F8">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/backspace_arrow"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/btnBack"
            android:layout_marginStart="12dp"/>

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/search"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <!-- CONTENT -->
    <ScrollView
        android:layout_below="@id/topBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ITEM TEMPLATE -->
            <!-- Remove Ads -->
            <TextView
                style="@style/setting_title"
                android:text="Remove Ads"/>
            <TextView
                style="@style/setting_sub"
                android:text="Tap to get rid of ads"/>
            <View style="@style/divider"/>

            <!-- Appearance -->
            <TextView
                android:id="@+id/btnAppearance"
                style="@style/setting_title"
                android:text="Appearance"/>
            <TextView style="@style/setting_sub" android:text="Themes, text size, dark theme, etc."/>
            <View style="@style/divider"/>

            <!-- Behavior -->
            <TextView style="@style/setting_title" android:text="Behavior"/>
            <TextView style="@style/setting_sub" android:text="Quick actions, sound, call confirmation, missed call notifications, etc."/>
            <View style="@style/divider"/>

            <!-- Dialpad -->
            <TextView
                android:id="@+id/btnDialpad"
                style="@style/setting_title"
                android:text="Dialpad"/>
            <TextView style="@style/setting_sub" android:text="T9 settings, sound and feedback, size, appearance, etc."/>
            <View style="@style/divider"/>

            <!-- Contacts -->
            <TextView
                android:id="@+id/btnContacts"
                style="@style/setting_title"
                android:text="Contacts"/>
            <TextView style="@style/setting_sub" android:text="Contacts to display, sort order, contact card, name formats, etc."/>
            <View style="@style/divider"/>

            <!-- Call history -->
            <TextView style="@style/setting_title" android:text="Call history"/>
            <TextView style="@style/setting_sub" android:text="Call grouping, contact names, call duration, etc."/>
            <View style="@style/divider"/>

            <!-- Dual SIM -->
            <TextView style="@style/setting_title" android:text="Dual SIM"/>
            <TextView style="@style/setting_sub" android:text="Settings for dual SIM devices"/>
            <View style="@style/divider"/>

            <!-- Blacklist -->
            <TextView style="@style/setting_title" android:text="Blacklist"/>
            <TextView style="@style/setting_sub" android:text="Select contacts and phone numbers to block"/>
            <View style="@style/divider"/>

            <!-- Labs -->
            <TextView style="@style/setting_title" android:text="Labs"/>
            <TextView style="@style/setting_sub" android:text="Experimental features"/>
            <View style="@style/divider"/>

            <!-- Backup -->
            <TextView style="@style/setting_title" android:text="Backup/Restore settings"/>
            <TextView style="@style/setting_sub" android:text=""/>
            <View style="@style/divider"/>

            <!-- Language -->
            <TextView style="@style/setting_title" android:text="Interface language"/>
            <TextView style="@style/setting_sub" android:text="System"/>
            <View style="@style/divider"/>

            <!-- SECTION: ABOUT -->
            <TextView style="@style/section" android:text="About"/>

            <TextView style="@style/setting_title" android:text="Say Thanks"/>
            <TextView style="@style/setting_sub" android:text="Enjoying the app? Please rate us and leave your comment on Google Play"/>
            <View style="@style/divider"/>

            <TextView style="@style/setting_title" android:text="Share App"/>
            <TextView style="@style/setting_sub" android:text="Share Truecaller with friends"/>
            <View style="@style/divider"/>

            <TextView style="@style/setting_title" android:text="About the App"/>
            <TextView style="@style/setting_sub" android:text="Show more info about the app"/>
            <View style="@style/divider"/>

            <!-- SECTION: ADVANCED -->
            <TextView style="@style/section" android:text="Advanced"/>

            <TextView style="@style/setting_title" android:text="License Agreement"/>
            <TextView style="@style/setting_sub" android:text="and Privacy Policy"/>
            <View style="@style/divider"/>

            <TextView style="@style/section" android:text="Debug"/>

            <TextView style="@style/setting_title" android:text="Report a bug"/>
            <TextView style="@style/setting_sub" android:text="Something wrong? Help us fix it"/>
            <View style="@style/divider"/>

            <TextView style="@style/setting_title" android:text="Reset settings"/>
            <View style="@style/divider"/>

            <TextView style="@style/setting_title" android:text="Restart App"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
