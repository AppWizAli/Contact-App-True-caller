<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"

    android:padding="16dp">

    <!-- Number Display -->
    <TextView
        android:id="@+id/tvNumber"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/dialpad_display_bg"
        android:text=""
        android:textSize="32sp"
        android:textColor="#000"
        android:gravity="center_vertical|end"
        android:padding="16dp"/>

    <!-- Dialpad Grid -->
    <GridLayout
        android:id="@+id/gridDialpad"
        android:layout_below="@id/tvNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:columnCount="3"
        android:rowCount="4"
        android:alignmentMode="alignMargins"
        android:rowOrderPreserved="false"
        android:columnOrderPreserved="false"
        android:layout_marginBottom="20dp">


        <Button android:id="@+id/btn1"
            android:text="1"
            android:backgroundTint="@color/primary_color"
            style="@style/DialButton"/>
        <Button
            android:id="@+id/btn2"
            android:text="2"
            style="@style/DialButton"/>
        <Button
            android:id="@+id/btn3"
            android:text="3"
            style="@style/DialButton"/>
        <Button
            android:id="@+id/btn4"
            android:text="4"
            style="@style/DialButton"/>
        <Button
            android:id="@+id/btn5"
            android:text="5"
            style="@style/DialButton"/>
        <Button
            android:id="@+id/btn6"
            android:text="6"
            style="@style/DialButton"/>
        <Button
            android:id="@+id/btn7"
            android:text="7"
            style="@style/DialButton"/>
        <Button
            android:id="@+id/btn8"
            android:text="8"
            style="@style/DialButton"/>
        <Button
            android:id="@+id/btn9"
            android:text="9"
            style="@style/DialButton"/>
        <Button
            android:id="@+id/btnStar"
            android:text="*"
            style="@style/DialButton"/>
        <Button
            android:id="@+id/btn0"
            android:text="0"
            style="@style/DialButton"/>
        <Button
            android:id="@+id/btnHash"
            android:text="#"
            style="@style/DialButton"/>
    </GridLayout>

    <!-- Backspace Button -->
    <ImageButton
        android:id="@+id/btnBackspace"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/gridDialpad"
        android:layout_alignParentEnd="true"
        android:background="@drawable/backspace_bg"
        android:src="@drawable/ic_backspace"
        android:padding="12dp"
        android:contentDescription="Backspace"/>

    <!-- Call FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCall"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_call"
        android:backgroundTint="#4CAF50"/>
</RelativeLayout>
