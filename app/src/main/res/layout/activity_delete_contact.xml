<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_gray">



    <!-- Header with Back Button -->
    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="6dp"
        android:paddingBottom="20dp">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/backspace_arrow"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="Back"
            android:backgroundTint="#000000" />

        <!-- Filter Button (Edit) -->
        <ImageView
            android:id="@+id/btnFilter"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_filter"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="60dp"
            android:contentDescription="Filter"
            android:backgroundTint="#000000" />

        <!-- 3 Dots (More Options) -->
        <ImageView
            android:id="@+id/btndelete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/delete_icon"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:contentDescription="More Options"
            android:backgroundTint="#000000" />


    </RelativeLayout>

    <!-- Contact Profile Section -->
    <LinearLayout
        android:id="@+id/profileSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="24dp">

        <!-- Profile Icon/Letter -->
        <TextView
            android:id="@+id/tvProfileLetter"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="B"
            android:textSize="36sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_circle_blue"
            android:layout_marginBottom="12dp" />

        <!-- Contact Name -->
        <TextView
            android:id="@+id/tvContactName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ali Bhai"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />


    </LinearLayout>

    <!-- Messages Timeline -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollViewMessages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="16dp">

        <LinearLayout
            android:id="@+id/messagesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <!-- Date 1: Today -->
            <TextView
                android:id="@+id/tvDateToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today, 09 September, Sunday"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="8dp" />

            <!-- Today's Messages RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewToday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="24dp" />

            <!-- Date 2: Yesterday -->
            <TextView
                android:id="@+id/tvDateYesterday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yesterday, 08 September, Saturday"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="8dp" />

            <!-- Yesterday's Messages RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewYesterday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="24dp" />

            <!-- Date 3: 19 September -->
            <TextView
                android:id="@+id/tvDateSeptember19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19 September, Monday"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="8dp" />

            <!-- 19 September Messages RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewSeptember19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="32dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



</LinearLayout>