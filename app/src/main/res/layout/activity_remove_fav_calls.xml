<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_gray"
    android:padding="10dp"
    tools:context=".ActivityRemoveFavCalls">

    <!-- Header Text -->
    <TextView
        android:id="@+id/tvAddFav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Favourite"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="@font/medium"
        android:textColor="@color/black"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"/>

    <!-- Horizontal RecyclerView for Favourite Calls -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFavouriteCalls"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/tvAddFav"
        android:scrollbars="horizontal"
        android:clipToPadding="false"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"/>

    <!-- Bottom Buttons: Cancel & OK with separator -->
    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground"/>

        <!-- Separator View -->
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#B0B0B0"/>

        <TextView
            android:id="@+id/tvOk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="OK"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground"/>
    </LinearLayout>

</RelativeLayout>
