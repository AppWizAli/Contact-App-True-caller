<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginVertical="4dp"
    android:background="@drawable/bg_call_item">

    <!-- Profile Initial (Red for missed call) -->
    <TextView
        android:id="@+id/txtInitial"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="D"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/bg_circle_red"
        android:textColor="#FFFFFF"/>

    <!-- Main info: Phone, Location, SIM -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="10dp">

        <!-- Phone Number (Red color for missed call) -->
        <TextView
            android:id="@+id/txtPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0345 0650761"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#D73838"/>

        <!-- Location -->
        <TextView
            android:id="@+id/txtLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pakistan"
            android:textSize="13sp"
            android:textColor="#777" />

        <!-- SIM Info (Optional - agar chahiye toh) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imgSimIcon"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:backgroundTint="#555"
                android:src="@drawable/ic_sim1_card" />

            <TextView
                android:id="@+id/txtSimInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="SIM 1"
                android:textColor="#555"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Right side: Time, Info Icon and Call Type -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center|end">

        <!-- Top Row: Time and Info Icon -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <!-- Time -->
            <TextView
                android:id="@+id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:30 AM"
                android:textSize="12sp"
                android:textColor="#666" />

            <!-- Info Icon -->
            <ImageView
                android:id="@+id/imgInfo"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/info_icon"
                android:backgroundTint="#666"/>

        </LinearLayout>

        <!-- Call Type Icon (Missed call - Red) -->
        <ImageView
            android:id="@+id/imgType"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_call_missed"
            android:backgroundTint="#D73838"/>

    </LinearLayout>

</LinearLayout>