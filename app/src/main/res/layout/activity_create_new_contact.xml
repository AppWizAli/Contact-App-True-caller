<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_gray"
    >

    <!-- Status Bar Time -->
    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9:41"
        android:textSize="14sp"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        android:textColor="#000000" />

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTime"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:background="#FFFFFF">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/arrow_back"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="Back"
            android:backgroundTint="#000000" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create new contact"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_centerInParent="true" />

        <!-- Save Button -->
        <TextView
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textSize="16sp"
            android:textColor="#007AFF"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="8dp" />

    </RelativeLayout>

    <!-- Saving to Section -->
    <LinearLayout
        android:id="@+id/savingToSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headerLayout"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:background="#F5F5F5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saving to"
            android:textSize="14sp"
            android:textColor="#666666"
            android:paddingBottom="8dp" />

        <!-- Google Account 1 -->
        <RelativeLayout
            android:id="@+id/accountGoogle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/ivGoogle1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/google_icon"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@+id/ivGoogle1"
                android:layout_marginStart="12dp"
                android:layout_centerVertical="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Google"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="alihassan@gmail.com"
                    android:textSize="14sp"
                    android:textColor="#666666" />

            </LinearLayout>

            <ImageView
                android:id="@+id/ivSelected1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check_circle"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:backgroundTint="#007AFF"
                android:visibility="visible" />

        </RelativeLayout>

        <!-- Google Account 2 -->
        <RelativeLayout
            android:id="@+id/accountGoogle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="?android:attr/selectableItemBackground"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/ivGoogle2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/google_icon"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@+id/ivGoogle2"
                android:layout_marginStart="12dp"
                android:layout_centerVertical="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Google"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="alihassan@gmail.com"
                    android:textSize="14sp"
                    android:textColor="#666666" />

            </LinearLayout>

            <ImageView
                android:id="@+id/ivSelected2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check_cricle_outline"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:backgroundTint="#666666"
                android:visibility="visible" />

        </RelativeLayout>

        <!-- Phone Contact -->
        <RelativeLayout
            android:id="@+id/accountPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="?android:attr/selectableItemBackground"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/ivPhone"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_phone_contact"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tvPhoneContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone contact"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_toEndOf="@+id/ivPhone"
                android:layout_marginStart="12dp"
                android:layout_centerVertical="true" />

            <ImageView
                android:id="@+id/ivSelected3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check_cricle_outline"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:backgroundTint="#666666" />

        </RelativeLayout>

        <!-- SIM1 -->
        <RelativeLayout
            android:id="@+id/accountSim1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="?android:attr/selectableItemBackground"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/ivSim1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_sim1_card"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tvSim1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIM1"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_toEndOf="@+id/ivSim1"
                android:layout_marginStart="12dp"
                android:layout_centerVertical="true" />

            <ImageView
                android:id="@+id/ivSelected4"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check_cricle_outline"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:backgroundTint="#666666" />

        </RelativeLayout>

        <!-- SIM2 -->
        <RelativeLayout
            android:id="@+id/accountSim2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="?android:attr/selectableItemBackground"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/ivSim2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_sim1_card"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tvSim2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIM2"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_toEndOf="@+id/ivSim2"
                android:layout_marginStart="12dp"
                android:layout_centerVertical="true" />

            <ImageView
                android:id="@+id/ivSelected5"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check_cricle_outline"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:backgroundTint="#666666" />

        </RelativeLayout>

    </LinearLayout>

    <!-- Contact Form ScrollView -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollViewForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/savingToSection"
        android:layout_above="@+id/bottomSpace"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- First Name -->
            <LinearLayout
                android:id="@+id/firstNameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="First name"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:paddingBottom="4dp" />

                <EditText
                    android:id="@+id/etFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter first name"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:background="@drawable/edittext_bg"
                    android:padding="12dp"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <!-- Last Name -->
            <LinearLayout
                android:id="@+id/lastNameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Last name"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:paddingBottom="4dp" />

                <EditText
                    android:id="@+id/etLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter last name"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:background="@drawable/edittext_bg"
                    android:padding="12dp"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <!-- Phone -->
            <LinearLayout
                android:id="@+id/phoneLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:paddingBottom="4dp" />

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter phone number"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:background="@drawable/edittext_bg"
                    android:padding="12dp"
                    android:inputType="phone" />

            </LinearLayout>

            <!-- Company -->
            <LinearLayout
                android:id="@+id/companyLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Company"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:paddingBottom="4dp" />

                <EditText
                    android:id="@+id/etCompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter company"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:background="@drawable/edittext_bg"
                    android:padding="12dp"
                    android:inputType="text" />

            </LinearLayout>

            <!-- Position -->
            <LinearLayout
                android:id="@+id/positionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="32dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Position"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:paddingBottom="4dp" />

                <EditText
                    android:id="@+id/etPosition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter position"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:background="@drawable/edittext_bg"
                    android:padding="12dp"
                    android:inputType="text" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Space (for padding) -->
    <View
        android:id="@+id/bottomSpace"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>