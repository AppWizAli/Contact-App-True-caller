<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:elevation="4dp"
    android:minWidth="200dp">

    <TextView
        android:id="@+id/btnImportExport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Import/Export"
        android:textSize="15sp"
        android:padding="14dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="?android:attr/selectableItemBackground" />

    <TextView
        android:id="@+id/btnImportSim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Import from SIM"
        android:textSize="15sp"
        android:padding="14dp"
        android:textColor="@color/black"
        android:background="?android:attr/selectableItemBackground" />

    <TextView
        android:id="@+id/btnImportStorage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Import from Storage"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:padding="14dp"
        android:background="?android:attr/selectableItemBackground" />

    <TextView
        android:id="@+id/btnExportStorage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Export to Storage"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:padding="14dp"
        android:background="?android:attr/selectableItemBackground" />

    <TextView
        android:id="@+id/btnShareVisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share Visible Contacts"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:padding="14dp"
        android:background="?android:attr/selectableItemBackground" />

    <TextView
        android:id="@+id/btnDeleteVisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Visible Contacts"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:padding="14dp"
        android:background="?android:attr/selectableItemBackground" />

    <!-- Cancel Button -->
    <TextView
        android:id="@+id/btnCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#D10000"
        android:padding="14dp"
        android:background="?android:attr/selectableItemBackground" />

</LinearLayout>
