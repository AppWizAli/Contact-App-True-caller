<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- HEADER -->
        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#F5F5F5">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:tint="#000000" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Dialpad"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/applyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:text="APPLY"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <!-- PRIMARY T9 LANGUAGE -->
        <RelativeLayout
            android:id="@+id/primaryT9Section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header"
            android:background="#FFFFFF"
            android:padding="16dp">

            <TextView
                android:id="@+id/primaryT9Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Primary T9 language"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/primaryT9Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/primaryT9Label"
                android:layout_alignParentStart="true"
                android:layout_marginTop="4dp"
                android:text="Default"
                android:textColor="#000000"
                android:textSize="14sp" />

        </RelativeLayout>

        <!-- SECONDARY T9 LANGUAGE -->
        <RelativeLayout
            android:id="@+id/secondaryT9Section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/primaryT9Section"
            android:background="#F5F5F5"
            android:padding="16dp">

            <TextView
                android:id="@+id/secondaryT9Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Secondary T9 language"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/secondaryT9Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/secondaryT9Label"
                android:layout_alignParentStart="true"
                android:layout_marginTop="4dp"
                android:text="Default"
                android:textColor="#000000"
                android:textSize="14sp" />

        </RelativeLayout>

        <!-- DISPLAY BY DEFAULT -->
        <RelativeLayout
            android:id="@+id/displaySection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/secondaryT9Section"
            android:background="#FFFFFF"
            android:padding="16dp">

            <TextView
                android:id="@+id/displayLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Display by Default"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/displayValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/displayLabel"
                android:layout_alignParentStart="true"
                android:layout_marginTop="4dp"
                android:text="Average"
                android:textColor="#000000"
                android:textSize="14sp" />

        </RelativeLayout>

        <!-- DIALLPAD -->
        <RelativeLayout
            android:id="@+id/dialpadSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/displaySection"
            android:background="#F5F5F5"
            android:padding="16dp">

            <TextView
                android:id="@+id/dialpadLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Dialpad"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/dialpadValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dialpadLabel"
                android:layout_alignParentStart="true"
                android:layout_marginTop="4dp"
                android:text="Dialpad sent T9 text size, call button"
                android:textColor="#000000"
                android:textSize="14sp" />

        </RelativeLayout>

        <!-- HIDE BY BACK-PRESS -->
        <RelativeLayout
            android:id="@+id/hideSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialpadSection"
            android:background="#FFFFFF"
            android:padding="16dp">

            <TextView
                android:id="@+id/hideLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Hide by back-press"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/hideValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hideLabel"
                android:layout_alignParentStart="true"
                android:layout_marginTop="4dp"
                android:text="Hide dipped by back-press"
                android:textColor="#000000"
                android:textSize="14sp" />

        </RelativeLayout>

        <!-- CLEAR BY BACK-PRESS -->
        <RelativeLayout
            android:id="@+id/clearSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hideSection"
            android:background="#F5F5F5"
            android:padding="16dp">

            <TextView
                android:id="@+id/clearLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Clear by back-press"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/clearValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/clearLabel"
                android:layout_alignParentStart="true"
                android:layout_marginTop="4dp"
                android:text="Hide phone numbers by back-press"
                android:textColor="#000000"
                android:textSize="14sp" />

        </RelativeLayout>

        <!-- CLEAR WHEN OPEN -->
        <RelativeLayout
            android:id="@+id/clearOpenSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/clearSection"
            android:background="#FFFFFF"
            android:padding="16dp">

            <TextView
                android:id="@+id/clearOpenLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Clear when open"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/clearOpenValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/clearOpenLabel"
                android:layout_alignParentStart="true"
                android:layout_marginTop="4dp"
                android:text="Clear typical private number when dialer is open"
                android:textColor="#000000"
                android:textSize="14sp" />

        </RelativeLayout>

        <!-- FAST-DIAL LAST NUMBER -->
        <RelativeLayout
            android:id="@+id/fastDialSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/clearOpenSection"
            android:background="#F5F5F5"
            android:padding="16dp">

            <TextView
                android:id="@+id/fastDialLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Fast-dial last number"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/fastDialValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fastDialLabel"
                android:layout_alignParentStart="true"
                android:layout_marginTop="4dp"
                android:text="Dial last-known replace number by pressing call button"
                android:textColor="#000000"
                android:textSize="14sp" />

        </RelativeLayout>

        <!-- FAST-DIAL WHEN SEARCH -->
        <RelativeLayout
            android:id="@+id/fastDialSearchSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fastDialSection"
            android:background="#FFFFFF"
            android:padding="16dp">

            <TextView
                android:id="@+id/fastDialSearchLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Fast-dial when search"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/fastDialSearchValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fastDialSearchLabel"
                android:layout_alignParentStart="true"
                android:layout_marginTop="4dp"
                android:text="Dial the best result found when search by pressing call button"
                android:textColor="#000000"
                android:textSize="14sp" />

        </RelativeLayout>

        <!-- ACTION BUTTON -->
        <RelativeLayout
            android:id="@+id/actionButtonSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fastDialSearchSection"
            android:background="#F5F5F5"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/actionButtonLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Action button"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/actionButtonValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/actionButtonLabel"
                android:layout_alignParentStart="true"
                android:layout_marginTop="4dp"
                android:text="Add contact"
                android:textColor="#000000"
                android:textSize="14sp" />

        </RelativeLayout>

    </RelativeLayout>
</ScrollView>