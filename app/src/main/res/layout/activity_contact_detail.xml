<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Status Bar Time -->


    <!-- Header with Back Button -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="20dp">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="Back"
            android:tint="#000000" />

        <!-- Edit Button -->
        <ImageView
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="80dp"
            android:contentDescription="Edit"
            android:tint="#000000" />

        <!-- 3 Dots (More Options) -->
        <ImageView
            android:id="@+id/btnMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_vert"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="48dp"
            android:contentDescription="More Options"
            android:tint="#000000" />

        <!-- Star/Favorite Button -->
        <ImageView
            android:id="@+id/btnStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:contentDescription="Favorite"
            android:tint="#000000" />

    </RelativeLayout>

    <!-- Contact Profile Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="24dp">

        <!-- Profile Icon/Letter -->
        <TextView
            android:id="@+id/tvProfileLetter"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="B"
            android:textSize="36sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_circle_blue"
            android:layout_marginBottom="12dp" />

        <!-- Contact Name -->
        <TextView
            android:id="@+id/tvContactName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bhai jan"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <!-- Phone Number -->
        <TextView
            android:id="@+id/tvPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q324 56650000"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <!-- Online Status -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Online"
            android:textSize="14sp"
            android:textColor="#4CAF50"
            android:drawableStart="@drawable/green_circle_bg"
            android:drawablePadding="6dp"
            android:gravity="center_vertical" />

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:paddingBottom="24dp">

        <!-- WhatsApp Button -->
        <LinearLayout
            android:id="@+id/whatsappLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="26dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_whatsapp"
                android:tint="#25D366" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WhatsApp"
                android:textSize="12sp"
                android:textColor="#666666" />

        </LinearLayout>

        <!-- Message Button -->
        <LinearLayout
            android:id="@+id/messageLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_message"
                android:tint="#2196F3"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message"
                android:textSize="12sp"
                android:textColor="#666666" />

        </LinearLayout>

        <!-- Call Button -->
        <LinearLayout
            android:id="@+id/callLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_call"
                android:tint="#2196F3"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call"
                android:textSize="12sp"
                android:textColor="#666666" />

        </LinearLayout>

        <!-- Video Call Button -->
        <LinearLayout
            android:id="@+id/videoLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_vediocall"
                android:tint="#2196F3"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Video"
                android:textSize="12sp"
                android:textColor="#666666" />

        </LinearLayout>

    </LinearLayout>

    <!-- Scrollable Details Section -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Signed actions and apps -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Signed actions and apps"
                android:textSize="14sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:paddingBottom="8dp" />

            <!-- About Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About"
                android:textSize="14sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:paddingBottom="8dp" />

            <!-- Groups -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Groups"
                android:textSize="14sp"
                android:textColor="#000000"
                android:paddingTop="8dp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Family, Favorites"
                android:textSize="14sp"
                android:textColor="#666666"
                android:paddingBottom="8dp" />

            <!-- Ringtone -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ringtone"
                android:textSize="14sp"
                android:textColor="#000000"
                android:paddingTop="8dp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Default"
                android:textSize="14sp"
                android:textColor="#666666"
                android:paddingBottom="16dp" />

            <!-- Recent Activity Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recent activity"
                android:textSize="14sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:paddingBottom="12dp" />

            <!-- Recent Calls RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewCalls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="32dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>