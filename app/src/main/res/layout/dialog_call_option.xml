<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:elevation="4dp"
    android:paddingVertical="8dp"
    android:minWidth="200dp"
    android:paddingHorizontal="12dp">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Call with"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingBottom="8dp"
        android:textColor="@color/black"/>

    <!-- SIM Items -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Jazz -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/jazz_sim"
                android:contentDescription="Jazz SIM"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jazz"
                android:fontFamily="@font/medium"
                android:textSize="14sp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <!-- Telenor -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/telenor_sim2"
                android:contentDescription="Telenor SIM"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telenor"
                android:textSize="14sp"
                android:fontFamily="@font/medium"
                android:textColor="@color/black"/>
        </LinearLayout>

        <!-- Always use this for calls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/black"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Always use this for calls"
                android:textSize="14sp"
                android:fontFamily="@font/light"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Cancel Button -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        android:fontFamily="@font/regular"
        android:background="?android:attr/selectableItemBackground"/>
</LinearLayout>
