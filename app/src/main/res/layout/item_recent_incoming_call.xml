<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Left icons + number section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Title + Duration -->
            <TextView
                android:id="@+id/tvTitleDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Incoming, 0:45"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingBottom="4dp" />

            <!-- Row of icon + number + type -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imgCallType"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_call_outgoing"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/tvNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0346 7455800"
                    android:textSize="14sp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Mobile"
                    android:textSize="14sp"
                    android:textColor="#888888"
                    android:layout_marginStart="6dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Time -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5:53 PM"
                android:textSize="14sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvAgo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="32 min ago"
                android:textSize="12sp"
                android:textColor="#888888"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Divider line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        android:layout_marginTop="12dp" />

</LinearLayout>
