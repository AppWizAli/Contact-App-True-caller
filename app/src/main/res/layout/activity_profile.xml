<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen_bg"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with Profile Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="24dp"
            android:elevation="2dp">

            <!-- Profile Picture -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_add"
                android:layout_gravity="center"
                app:civ_border_width="2dp"
                app:civ_border_color="#E0E0E0" />

            <!-- Profile Name -->
            <TextView
                android:id="@+id/tvProfileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mahid"
                android:textSize="24sp"
                android:textColor="#212121"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="16dp" />

            <!-- Email -->
            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mahid@gmail.com"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_gravity="center"
                android:layout_marginTop="4dp" />

            <!-- Edit Profile Button -->
            <Button
                android:id="@+id/btnEditProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage your Google Account"
                android:textColor="#1a73e8"
                android:background="@android:color/transparent"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:drawableStart="@android:drawable/ic_menu_manage"
                android:drawablePadding="8dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Account Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ACCOUNT"
                android:textSize="12sp"
                android:textColor="#757575"
                android:textStyle="bold"
                android:paddingStart="24dp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:letterSpacing="0.1" />

            <!-- Switch Account -->
            <LinearLayout
                android:id="@+id/btnSwitchAccount"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_rotate"
                    android:tint="#5f6368"
                    android:contentDescription="Switch Account" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Switch account"
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:layout_marginStart="24dp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_menu_forward"
                    android:tint="#5f6368"
                    android:contentDescription="Arrow" />

            </LinearLayout>

            <!-- Add Account -->
            <LinearLayout
                android:id="@+id/btnAddAccount"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_add"
                    android:tint="#5f6368"
                    android:contentDescription="Add Account" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Add account"
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:layout_marginStart="24dp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_menu_forward"
                    android:tint="#5f6368"
                    android:contentDescription="Arrow" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- App Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MORE FROM THIS APP"
                android:textSize="12sp"
                android:textColor="#757575"
                android:textStyle="bold"
                android:paddingStart="24dp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:letterSpacing="0.1" />

            <!-- Settings -->
            <LinearLayout
                android:id="@+id/btnSettings"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_preferences"
                    android:tint="#5f6368"
                    android:contentDescription="Settings" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Settings"
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:layout_marginStart="24dp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_menu_forward"
                    android:tint="#5f6368"
                    android:contentDescription="Arrow" />

            </LinearLayout>

            <!-- Help & Feedback -->
            <LinearLayout
                android:id="@+id/btnHelp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_help"
                    android:tint="#5f6368"
                    android:contentDescription="Help" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Help Feedback"
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:layout_marginStart="24dp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_menu_forward"
                    android:tint="#5f6368"
                    android:contentDescription="Arrow" />

            </LinearLayout>

            <!-- Rate App -->
            <LinearLayout
                android:id="@+id/btnRateApp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/btn_star"
                    android:tint="#5f6368"
                    android:contentDescription="Rate App" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rate this app"
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:layout_marginStart="24dp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_menu_forward"
                    android:tint="#5f6368"
                    android:contentDescription="Arrow" />

            </LinearLayout>

            <!-- Share App -->
            <LinearLayout
                android:id="@+id/btnShareApp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_share"
                    android:tint="#5f6368"
                    android:contentDescription="Share App" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Share this app"
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:layout_marginStart="24dp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_menu_forward"
                    android:tint="#5f6368"
                    android:contentDescription="Arrow" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Legal Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:elevation="2dp">

            <TextView
                android:id="@+id/btnPrivacyPolicy"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Privacy Policy"
                android:textSize="14sp"
                android:textColor="#1a73e8"
                android:gravity="center_vertical|start"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:background="?android:attr/selectableItemBackground" />

            <TextView
                android:id="@+id/btnTerms"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Terms of Service"
                android:textSize="14sp"
                android:textColor="#1a73e8"
                android:gravity="center_vertical|start"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:background="?android:attr/selectableItemBackground" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <TextView
            android:id="@+id/tvAppVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="App Version 1.0.0"
            android:textSize="12sp"
            android:textColor="#9e9e9e"
            android:gravity="center"
            android:padding="16dp" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textColor="#d93025"
            android:background="@android:color/transparent"
            android:textAllCaps="false"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="32dp"
            android:drawableStart="@android:drawable/ic_lock_power_off"
            android:drawablePadding="8dp"
            android:drawableTint="#d93025" />

    </LinearLayout>

</ScrollView>
