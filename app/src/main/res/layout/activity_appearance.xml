<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6F8">

    <!-- HEADER -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#F4F6F8">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:src="@drawable/backspace_arrow"
            android:tint="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Appearance"
            android:textSize="18sp"
            android:textColor="#000000" />
    </RelativeLayout>

    <!-- CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- THEME -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="16dp">

                <TextView
                    android:id="@+id/themeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Theme"
                    android:textSize="16sp"
                    android:fontFamily="@font/regular"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/themeTitle"
                    android:layout_marginTop="4dp"
                    android:text="Dark blue"
                    android:textSize="13sp"
                    android:textColor="#777777" />
            </RelativeLayout>
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

            <!-- TABS -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tabsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tabs"
                    android:textSize="16sp"
                    android:fontFamily="@font/regular"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tabsTitle"
                    android:layout_marginTop="4dp"
                    android:text="Edit visible tabs and order"
                    android:textSize="13sp"
                    android:textColor="#777777" />
            </RelativeLayout>
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

            <!-- TEXT SIZE -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textSizeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Text size"
                    android:textSize="16sp"
                    android:fontFamily="@font/regular"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textSizeTitle"
                    android:layout_marginTop="4dp"
                    android:text="100%"
                    android:textSize="13sp"
                    android:textColor="#777777" />
            </RelativeLayout>
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

            <!-- DIALPAD -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="16dp">

                <TextView
                    android:id="@+id/dialpadTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dialpad"
                    android:fontFamily="@font/regular"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dialpadTitle"
                    android:layout_marginTop="4dp"
                    android:text="Dialpad appearance"
                    android:textSize="13sp"
                    android:textColor="#777777" />
            </RelativeLayout>
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

            <!-- LIST ITEM SIZE -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="16dp">

                <TextView
                    android:id="@+id/listItemTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="List item size"
                    android:textSize="16sp"
                    android:fontFamily="@font/regular"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/listItemTitle"
                    android:layout_marginTop="4dp"
                    android:text="Height 100%, photo scale 100%"
                    android:textSize="13sp"
                    android:textColor="#777777" />
            </RelativeLayout>
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

            <!-- FAVORITES -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="16dp">

                <TextView
                    android:id="@+id/favTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Favorite contacts layout"
                    android:textSize="16sp"
                    android:fontFamily="@font/regular"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/favTitle"
                    android:layout_marginTop="4dp"
                    android:text="Grid, 3 columns"
                    android:textSize="13sp"
                    android:textColor="#777777" />
            </RelativeLayout>
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

            <!-- PHOTOS -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="16dp">

                <TextView
                    android:id="@+id/photosTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Photos and Avatar"
                    android:textSize="16sp"
                    android:fontFamily="@font/regular"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/photosTitle"
                    android:layout_marginTop="4dp"
                    android:text="Customize photos style and avatars"
                    android:textSize="13sp"
                    android:textColor="#777777" />
            </RelativeLayout>
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

            <!-- INCOMING -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="16dp">

                <TextView
                    android:id="@+id/incomingTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Incoming call screen"
                    android:textSize="16sp"
                    android:fontFamily="@font/regular"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/incomingTitle"
                    android:layout_marginTop="4dp"
                    android:text="Photo style, answer method, visuals"
                    android:textSize="13sp"
                    android:textColor="#777777" />
            </RelativeLayout>
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

            <!-- ONGOING -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/ongoingTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ongoing call screen"
                    android:textSize="16sp"
                    android:fontFamily="@font/regular"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ongoingTitle"
                    android:layout_marginTop="4dp"
                    android:text="Photo style, visuals"
                    android:textSize="13sp"
                    android:textColor="#777777" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
