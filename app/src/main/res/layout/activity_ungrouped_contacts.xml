<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/screen_bg">

    <!-- Header with Back Button and Title -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="16dp"
        android:elevation="4dp"
        android:gravity="center_vertical">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_revert"
            android:backgroundTint="#FFFFFF"
            android:contentDescription="Back"
            android:padding="4dp" />

        <!-- Title with Group Name -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="Coworkers Group"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Add More Button -->
        <Button
            android:id="@+id/btnAddMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add More"
            android:backgroundTint="@color/whitee"
            android:textColor="@color/black"
            android:textAllCaps="false" />

    </LinearLayout>

    <!-- Group Info -->
    <LinearLayout
        android:id="@+id/groupInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:layout_below="@id/headerLayout"
        android:elevation="2dp"
        android:gravity="center_vertical">

        <!-- Group Icon -->
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_myplaces"
            android:tint="#2196F3"
            android:contentDescription="Group Icon" />

        <!-- Group Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tvGroupName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Coworkers"
                android:textSize="18sp"
                android:textColor="#212121"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMemberCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5 members"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Edit Group Button -->
        <ImageView
            android:id="@+id/btnEditGroup"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_edit"
            android:tint="#757575"
            android:contentDescription="Edit Group"
            android:padding="4dp" />

    </LinearLayout>

    <!-- Search Bar -->
    <EditText
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/groupInfoLayout"
        android:layout_margin="12dp"
        android:hint="Search in group..."
        android:background="@android:drawable/editbox_background"
        android:padding="12dp"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:inputType="text" />

    <!-- Members List Title -->
    <LinearLayout
        android:id="@+id/listTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#EEEEEE"
        android:paddingVertical="8dp"
        android:paddingHorizontal="16dp"
        android:layout_below="@id/searchBar"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MEMBERS"
            android:textSize="12sp"
            android:textColor="#757575"
            android:textStyle="bold"
            android:letterSpacing="0.1" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvMembersCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="12sp"
            android:textColor="#2196F3"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Members List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/membersRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/listTitleLayout"
        android:background="#FFFFFF"
        android:paddingTop="8dp" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/emptyStateLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:layout_below="@id/listTitleLayout">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@android:drawable/ic_menu_myplaces"
            android:tint="#BDBDBD"
            android:contentDescription="Empty Group" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No members in group"
            android:textSize="18sp"
            android:textColor="#757575"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add contacts to this group"
            android:textSize="14sp"
            android:textColor="#9E9E9E"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnAddMembers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Contacts"
            android:layout_marginTop="24dp"
            android:backgroundTint="#2196F3" />

    </LinearLayout>

</RelativeLayout>